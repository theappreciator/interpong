{
  "name": "interpong",
  "description": "Balls bouncing around a multi-verse",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "preinstall": "npm run clean:common",
    "postinstall": "npm run create-no-sync && npm run build:common && npm run clean:client",
    "build": "npm run build:common && npm run build:client && npm run build:server",
    "build:common": "npm run build -w packages/common",
    "build:client": "npm run build -w packages/client",
    "build:server": "npm run build -w packages/server",
    "build:server:parcel": "npm run build:parcel -w packages/server",
    "clean": "npm run clean -ws",
    "clean:common": "npm run clean -w packages/common",
    "clean:common:modules": "npm run clean:modules -w packages/common",
    "clean:client": "npm run clean -w packages/client",
    "clean:client:modules": "npm run clean:modules -w packages/client",
    "clean:modules": "rm -rf node_modules && rm -rf node_modules.nosync && npm run clean:modules -ws -if-present",
    "clean:server": "npm run clean -w packages/server",
    "clean:server:modules": "npm run clean:modules -w packages/server",
    "clean:server:client": "rm -rf ./packages/server/client",
    "clean:package-lock": "rm -f package-lock.json && npm run clean:package-lock -ws",
    "start:dev:client": "npm run start:dev -w packages/client",
    "start:dev:server": "npm run start:dev -w packages/server",
    "start:server": "npm run start:prod -w packages/server",
    "start:server:ci": "node distribution/server.js",
    "start:server:ci-stop-gap": "npm run start:ci-stop-gap -w packages/server",
    "ci:create-app": "npm run build:server:parcel && npm run ci:build:client && npm run clean:server:client && mkdir -p ./packages/server/client && cp -r ./packages/client/dist/* ./packages/server/client",
    "ci:build:client": "npm run ci:build -w packages/client",
    "create-no-sync": "npm run create-no-sync:node && npm run create-no-sync -ws",
    "create-no-sync:client": "npm run create-no-sync -w packages/client",
    "create-no-sync:server": "npm run create-no-sync -w packages/server",
    "create-no-sync:node": "if [ -d node_modules ]; then rm -fr node_modules.nosync; mv node_modules node_modules.nosync; ln -s node_modules.nosync node_modules; fi",
    "nuke": "npm run clean && npm run clean:modules && npm run clean:package-lock && npm cache clear --force"
  },
  "author": "Jess Tucker <jessjesstheappreciator@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "./packages/common",
    "./packages/client",
    "./packages/server"
  ],
  "dependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@types/babel__core": "^7.20.0",
    "@types/jest": "^29.5.1",
    "babel-jest": "^29.5.0",
    "buffer": "^5.7.1",
    "jest": "^29.5.0",
    "punycode": "^1.4.1",
    "ts-jest": "^29.1.0",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "crypto-browserify": "^3.12.0",
    "events": "^3.3.0",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "timers-browserify": "^2.0.12",
    "typescript": "^4.9.5",
    "util": "^0.12.5"
  }
}
