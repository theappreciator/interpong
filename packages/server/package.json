{
  "name": "@interpong/server",
  "description": "",
  "main": "distribution/server.js",
  "version": "1.0.0",
  "scripts": {
    "test": "cd ../../ && npm run test server",
    "test:coverage": "cd ../../ && npm run test:coverage -- server --collectCoverageFrom=./packages/server/source/**/*.ts",
    "start": "npm run build && node distribution/server.js",
    "start:parcel": "node distribution/server.js",
    "start:prod": "node distribution/server.js",
    "start:dev": "nodemon",
    "start:ci-stop-gap": "ts-node ./source/server",
    "build": "npm run clean && tsc -p ./tsconfig.server.json",
    "build:parcel": "npm run clean && parcel build 'source/**/*.ts' --target default",
    "build:check": "tsc -p ./tsconfig.server.json --noEmit",
    "build:common": "cd ../common && npm run build",
    "build:client": "rm -fr ./client && cd ../client && npm run build && cp -R ./distribution ../server/client",
    "clean": "rm -rf distribution && rm -fr .parcel-cache",
    "clean:client": "rm -rf client",
    "clean:modules": "rm -rf node_modules && rm -rf node_modules.nosync",
    "clean:package-lock": "rm -f package-lock.json",
    "create-no-sync": "npm run create-no-sync:node",
    "create-no-sync:node": "if [ -d node_modules ]; then rm -fr node_modules.nosync; mv node_modules node_modules.nosync; ln -s node_modules.nosync node_modules; fi"
  },
  "author": "Jess Tucker <jessjesstheappreciator@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@interpong/common": "^1.0.0",
    "@parcel/config-default": "^2.8.3",
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@types/color": "^3.0.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.15",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/object-inspect": "^1.8.1",
    "@types/uuid": "^9.0.1",
    "chalk": "^4.1.2",
    "color": "^4.2.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "express": "^4.18.2",
    "glob": "^8.1.0",
    "http-errors": "^2.0.0",
    "jade": "^1.11.0",
    "jest": "^29.5.0",
    "log4js": "^6.7.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.21",
    "parcel": "^2.8.3",
    "reflect-metadata": "^0.1.13",
    "socket-controllers": "^0.1.2",
    "socket.io": "^4.6.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typedi": "^0.10.0",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0"
  },
  "targets": {
    "default": {
      "context": "node",
      "outputFormat": "commonjs",
      "distDir": "./distribution",
      "includeNodeModules": true,
      "sourceMap": true,
      "engines": {
        "node": ">= 18"
      }
    }
  }
}
